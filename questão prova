#include <stdio.h>
int main(){
    int n, i=0, r=0;
        printf("Informe um numero: ");
        scanf("%d", &n);
        if(n>1){
            for(i=2; i<=n/2; i++){
                if(n%i==0){
                    r++;
                    break;
                }
            }
            if (r==0){
                printf("o numero %d e primo !",n);
            } else {
                printf("o numero %d nao e primo !",n);
        }
        printf("\n\n");
        r=0;
        }
        return 0;
    }



